<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">

        <shape>

            <solid
                android:color="@color/colorPrimary"/>
            <stroke
                android:width="0dp"
                android:color="#000000"/>
            <corners
                android:radius="8dp"/>
            <padding

                android:top="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                />
        </shape>




    </item>


</selector>